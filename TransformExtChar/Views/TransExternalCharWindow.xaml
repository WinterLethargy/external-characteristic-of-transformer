                                    <TextBlock>
                                        <Run Text="I" FontSize="{StaticResource BasicFontSize}"/><Run Text="2 н" FontSize="{StaticResource SubscribeFontSize}"/><Run Text=":" FontSize="{StaticResource BasicFontSize}"/>
